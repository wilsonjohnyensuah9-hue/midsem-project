#include <iostream>
#include <vector>
#include <string>

using namespace std;

class AttendanceSession {
public:
    string courseCode;
    string date;
    string startTime;
    int duration;

    void createSession() {
        cout << "Enter Course Code: ";
        cin >> courseCode;

        cout << "Enter Date (YYYY-MM-DD): ";
        cin >> date;

        cout << "Enter Start Time (HH:MM): ";
        cin >> startTime;

        cout << "Enter Duration (in minutes): ";
        cin >> duration;

        cout << "Session created successfully!\n";
    }

    void displaySession() {
        cout << "\n--- Session Details ---\n";
        cout << "Course Code: " << courseCode << endl;
        cout << "Date: " << date << endl;
        cout << "Start Time: " << startTime << endl;
        cout << "Duration: " << duration << " minutes\n";
    }
};

void displayMenu() {
    cout << "\n============================================\n";
    cout << "   DIGITAL ATTENDANCE SYSTEM - Main Menu    \n";
    cout << "============================================\n";
    cout << "1. Register Student\n";
    cout << "2. View All Students\n";
    cout << "3. Search Student by Index\n";
    cout << "4. Create New Lecture Session\n";
    cout << "5. View Current Session Details\n";
    cout << "6. Mark Attendance\n";
    cout << "7. View Attendance Report\n";
    cout << "8. Exit Program\n";
    cout << "============================================\n";
    cout << "Enter your choice: ";
}

int main() {
    AttendanceSession session;
    int choice;
    bool sessionActive = false;

    do {
        displayMenu();
        cin >> choice;
        cin.ignore();

        switch(choice) {
            case 1:
                cout << "\n[Student Registration Module]\n";
                cout << "This feature will allow registering new students.\n";
                break;

            case 2:
                cout << "\n[View All Students]\n";
                cout << "Displaying all registered students...\n";
                break;

            case 3:
                cout << "\n[Search Student]\n";
                cout << "Enter student index number to search.\n";
                break;

            case 4:
                session.createSession();
                sessionActive = true;
                break;

            case 5:
                if (sessionActive) {
                    session.displaySession();
                } else {
                    cout << "\nNo active session! Please create a session first.\n";
                }
                break;

            case 6:
                if (sessionActive) {
                    cout << "\n[Mark Attendance]\n";
                    cout << "Marking attendance for current session...\n";
                } else {
                    cout << "\nNo active session! Please create a session first.\n";
                }
                break;

            case 7:
                cout << "\n[Attendance Report]\n";
                cout << "Generating attendance report...\n";
                break;

            case 8:
                cout << "\n============================================\n";
                cout << "Thank you for using the Attendance System!\n";
                cout << "============================================\n";
                break;

            default:
                cout << "\nInvalid choice! Please enter a valid option (1-8).\n";
        }

    } while(choice != 8);

    return 0;
}
